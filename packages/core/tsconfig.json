{
	"compilerOptions": {
		"baseUrl": "src",
		"outDir": "dist",
		"skipLibCheck": true,
		"experimentalDecorators": true,
		"emitDeclarationOnly": true,
		"isolatedModules": false,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "dist/**/*"]
}
